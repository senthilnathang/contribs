<?xml version="1.0" ?>
<odoo>
    <record id="property_rule_employee_shift" model="ir.rule">
        <field name="name">HR Shift Multi Company</field>
        <field name="model_id" ref="model_hr_employee_shift"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>

    <record id="property_rule_employee_shift_run" model="ir.rule">
        <field name="name">HR Shift Generate Multi Company</field>
        <field name="model_id" ref="model_employee_shift_run"/>
        <field eval="True" name="global"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
</odoo>
